<h1>
  <%= @cocktail.name %>
</h1>
<p>
  <% @cocktail.doses.each do |dose| %>
    <%= dose.description %>
    <%= dose.ingredient.name %>
  <% end %>
</p>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>


<h2>Add a new dose</h2>

<%= simple_form_for([ @cocktail, @dose ]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :description %>
  <%= f.input :ingredient_id, collection: Ingredient.all %>
  <%= f.button :submit %>
<% end %>


<%= link_to "edit", edit_cocktail_path %>
<%= link_to "Delete", cocktail_path(@cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<%= link_to "home", cocktails_path %>
